{
  "scripts": {
    "dev": "npx tailwindcss -i ./src/css/tailwind.css -o ./public/css/style.css",
    "watch": "npx tailwindcss -i ./src/css/tailwind.css -o ./public/css/style.css --watch",
    "build": "npx tailwindcss -i ./src/css/tailwind.css -o ./public/css/style.css --minify",
    "alpine": "npx esbuild ./src/js/index.js --outfile=public/js/alpine.js --bundle",
    "chart": "npx esbuild ./src/js/chart.js --outfile=public/js/chart.js --bundle",
    "serve": "live-server ./public"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.2.2"
  },
  "dependencies": {
    "alpinejs": "^3.10.5",
    "chart.js": "^3.9.1",
    "esbuild": "^0.15.13"
  }
}
